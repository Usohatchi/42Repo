<!DOCTYPE html>

<html>
    
<head>
    <meta charset="utf-8">
    <title></title>
    <style>
        #image-header{
            background:#3df url(<%= @project.image_link %>) no-repeat fixed center;
            background-size: cover;
            width: 100%;
            height: 100vh;
            margin: 0;
            color: white;
            padding: 100px, 0;
            margin-bottom: 100px;
            text-align:center
        }
    </style>
    <link href="main.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="header">
        <div id="header-content">
            <h1 id="nav-text">
                Header Text
            <a href="#">
                <img id="return-button" src="http://www.clker.com/cliparts/c/3/0/7/12456877162087486429Soeb_Plain_Arrow_7.svg.med.png" alt="return button">
            </a>
            </h1>
        </div>
    </div>
    <div>
        <header id="image-header">
            <div id="image-text-holder">
                <h1 id="img-text">
                    <%= @project.title %>
                </h1>
            </div>
        </header>
    </div>
    <div class="text-holder">
        <h2>
            <%= @project.title %>
        </h2>
        <div class="text-holder" style="margin-bottom: 70vh">
            <%= @project.text %>
        </div>
    </div>
