<!DOCTYPE html>

<html>
    
<head>
	<meta charset="utf-8">
	<title></title>
    <script></script>
	<style></style>
</head>
    
<body>
	<div id="container">
        <ul class="nav-bar2">
            <li style="float: left; border: none" class="nav-bar-links"><%= link_to '42', projects_path, :class => "nav-link" %></li>
            <li class="nav-bar-links"><%= link_to "New", new_project_path, :class => "nav-link" %></li>
        </ul>
		<div id="logo-holder">
			<img id="logo" src=<%= image_url("42.png") %> alt="placeholder">
            <div id="border1"></div>
            <br>
            <div id="border2"></div>
		</div>
        <div class="wrap">
            <% (0..3).step(1) do |i| %>
                <% if i <= (4/2).to_i %>
                    <div class="image-list-holder list-left">
                        <ul class="image-list">
                            <% (i..@projects.length).step(4) do |index| %>
                                <li class="display-img-holder">
                                    <% if !(@projects[index].nil?) %>
                                         <%= link_to image_tag(@projects[index].image_link,  :class => "display-img"), project_path(@projects[index]) %>
                                         <%= link_to project_path(@projects[index]) do %>
                                            <figcaption>
                                                <div>                                    
                                                    <h3><%= @projects[index].title %></h3>
                                                    <hr class="border1" />
                                                    <%= @projects[index].photographer %>
                                                    <br>
                                                    $ <%= @projects[index].price %>
                                                    <hr class="border2" />
                                                </div>
                                            </figcaption>
                                         <% end %>
                                    <% end %>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                <% else %>
                    <div class="image-list-holder list-right">
                        <ul class="image-list">
                            <% (i..@projects.length).step(4) do |index| %>
                                <li class="display-img-holder">
                                    <% if !(@projects[index].nil?) %>
                                         <%= link_to image_tag(@projects[index].image_link,  :class => "display-img"), project_path(@projects[index]) %>
                                         <%= link_to project_path(@projects[index]) do %>
                                            <figcaption>
                                                <div>                                    
                                                    <h3><%= @projects[index].title %></h3>
                                                    <hr class="border1" />
                                                    <%= @projects[index].photographer %>
                                                    <br>
                                                    $ <%= @projects[index].price %>
                                                    <hr class="border2" />
                                                </div>
                                            </figcaption>
                                         <% end %>
                                    <% end %>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
            <% end %>
        </div>
	</div>
</body>
    
</html>
